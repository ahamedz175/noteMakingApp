<a%- include('../_partial/_header'); -%>


<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.12.1/css/all.css" crossorigin="anonymous">


<div class="row">
    <div class="col-md-6">
        <h1>Notes</h1>
    </div>
</div>

<div class="row">
    <div class="col-md-6" style="margin-bottom:10px;">
        <a href="/posts/add" type="button" class="btn btn-primary"><i class="fa fa-plus"></i></a>
    </div>
</div>

<!--List all the posts-->
<% posts.forEach(function(post) { %>
    <div class="col-sm-4 col-md-4">
        <div class="thumbnail">
            <div class="caption">
                <h4><%= post.title %></h4>
                <p><%= post.content %></p>
                <p><a href="posts/<%= post._id %>" class="btn btn-primary" role="button">Read</a></p> 
		<p><a href="posts/edit/<%= post._id %>" class="btn btn-primary" role="button">Edit</a></p>
		
		


            </div>
        </div>
    </div>

<% }) %>




<%- include ('../_partial/_footer'); -%>
